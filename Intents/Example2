CurrencyActivity.kt ..........................................

package com.example.healthfinancehelper

import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.Toast

class CurrencyActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_currency)

        val etLKR = findViewById<EditText>(R.id.etLKR)
        val btnConvert = findViewById<Button>(R.id.btnConvert)

        btnConvert.setOnClickListener {
            val lkr = etLKR.text.toString().toFloatOrNull()

            if (lkr != null) {
                val euroRate = 350f
                val euro = lkr / euroRate
                Toast.makeText(this, "Amount in EURO: %.2f".format(euro), Toast.LENGTH_LONG).show()
            } else {
                Toast.makeText(this, "Invalid Input!", Toast.LENGTH_SHORT).show()
            }
        }
    }
}
