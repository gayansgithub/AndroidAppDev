MainActivity.kt (Send 3 Data Items to Activity 2) ..................................

package com.example.studenttransfer

import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.content.Intent
import android.widget.Button
import android.widget.EditText

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val etRegNo = findViewById<EditText>(R.id.etRegNo)
        val etName = findViewById<EditText>(R.id.etName)
        val etContact = findViewById<EditText>(R.id.etContact)
        val btnSend = findViewById<Button>(R.id.btnSend)

        btnSend.setOnClickListener {

            val regNo = etRegNo.text.toString()
            val name = etName.text.toString()
            val contact = etContact.text.toString()

            // Sending all 3 values to next activity
            val intent = Intent(this, SecondActivity::class.java)
            intent.putExtra("regno", regNo)
            intent.putExtra("name", name)
            intent.putExtra("contact", contact)

            startActivity(intent)
        }
    }
}

